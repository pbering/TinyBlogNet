    <title>@ViewBag.Title - invokecommand.net</title>
    <style>
        html {
            background-color: #1e1e1e;
            overflow-y: scroll;
        }

        body {
            color: #d4d4c9;
            font-family: "Courier New", Courier, monospace;
            font-size: 1.1em;
            margin-left: auto;
            margin-right: auto;
            max-width: 800px;
            padding-top: 1em;
            width: 90%;
        }

        h1 { font-size: 1.3em; }

        nav {
            border-bottom: #d4d4c9 dashed 2px;
            font-weight: bold;
            padding-bottom: 25px;
        }

        a { color: #d4d4c9; }

        a:hover { color: white; }

        footer {
            border-top: #d4d4c9 dashed 2px;
            margin-top: 25px;
        }

        article code {
            background-color: #404040;
            display: block;
            overflow: auto;
            padding: 10px;
        }

    </style>
    <link rel="alternate" type="application/rss+xml" title="@ViewBag.SiteName" href="/rss.xml"/>
</head>
