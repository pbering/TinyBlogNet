@using TinyBlogNet
@model Post
<h1><a href="@Model.Url">@Model.Title</a></h1>
<article>@Html.Raw(@Model.Content)</article>
<code>
    Posted @Model.Published.ToHumaneString(), tagged:
    @for (int i = 0; i < @Model.Tags.Count; i++)
    {
        var tag = @Model.Tags[i];

        <a href="@tag.Url">@tag.Name</a>@(i < @Model.Tags.Count - 1 ? ", " : "")
    }
</code>